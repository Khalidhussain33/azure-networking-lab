{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "namePrefix": {
            "type": "string"
        },
        "fwIp": {
            "type": "string"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]"
    },
    "resources": [
        {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(parameters('namePrefix'), '-hub-net')]",
            "comments": "Deploy hub network",
            "dependsOn": [
                "[concat(parameters('namePrefix'), '-hub-rp-fw')]",
                "[concat(parameters('namePrefix'), '-defaultRoutes')]"
            ],
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/20"
                    ]
                },
                "subnets": [
                    {
                        "name": "jumpserver-sub",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    },
                    {
                        "name": "sharedservices-sub",
                        "properties": {
                            "addressPrefix": "10.0.1.0/24"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "10.0.2.0/24"
                        }
                    },
                    {
                        "name": "ngfw-int",
                        "properties": {
                            "addressPrefix": "10.0.3.0/26"
                        }
                    },
                    {
                        "name": "ngfw-ext",
                        "properties": {
                            "addressPrefix": "10.0.3.64/26"
                        }
                    },
                    {
                        "name": "rp",
                        "properties": {
                            "addressPrefix": "10.0.3.128/26",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('namePrefix'), '-hub-rp-fw'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(parameters('namePrefix'), '-routesFromRp'))]"
                            }
                        }
                    },
                    {
                        "name": "AzureFirewallSubnet",
                        "properties": {
                            "addressPrefix": "10.0.3.192/26"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(parameters('namePrefix'), '-spoke1-net')]",
            "comments": "Deploy spoke1 network",
            "dependsOn": [
                "[concat(parameters('namePrefix'), '-spoke1-sub1-fw')]",
                "[concat(parameters('namePrefix'), '-defaultRoutes')]"
            ],
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.16.0/20"
                    ]
                },
                "subnets": [
                    {
                        "name": "sub1",
                        "properties": {
                            "addressPrefix": "10.0.16.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('namePrefix'), '-spoke1-sub1-fw'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(parameters('namePrefix'), '-defaultRoutes'))]"
                            },
                            "serviceEndpoints": [
                                {
                                    "service": "Microsoft.Sql",
                                    "locations": [
                                        "westeurope"
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "name": "sub2",
                        "properties": {
                            "addressPrefix": "10.0.17.0/24"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2018-04-01",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(parameters('namePrefix'), '-spoke2-net')]",
            "comments": "Deploy spoke2 network",
            "dependsOn": [
                "[concat(parameters('namePrefix'), '-spoke2-sub1-fw')]",
                "[concat(parameters('namePrefix'), '-defaultRoutes')]"
            ],
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.32.0/20"
                    ]
                },
                "subnets": [
                    {
                        "name": "sub1",
                        "properties": {
                            "addressPrefix": "10.0.32.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', concat(parameters('namePrefix'), '-spoke2-sub1-fw'))]"
                            },
                            "routeTable": {
                                "id": "[resourceId('Microsoft.Network/routeTables', concat(parameters('namePrefix'), '-defaultRoutes'))]"
                            }
                        }
                    },
                    {
                        "name": "paas-integration-sub",
                        "properties": {
                            "addressPrefix": "10.0.33.0/24",
                            "delegations": [
                                {
                                    "name": "delegation",
                                    "properties": {
                                        "serviceName": "Microsoft.Web/serverfarms",
                                        "actions": [
                                            "Microsoft.Network/virtualNetworks/subnets/action"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[concat(parameters('namePrefix'), '-central-net')]",
            "comments": "Deploy on-prem simulation network",
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.254.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "server-sub",
                        "properties": {
                            "addressPrefix": "10.254.0.0/24"
                        }
                    },
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "10.254.1.0/24"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "comments": "Configure peering from Spoke1 to Hub",
            "dependsOn": [
                "[concat(parameters('namePrefix'), '-hub-net')]",
                "[concat(parameters('namePrefix'), '-spoke1-net')]",
                "[concat(parameters('namePrefix'), '-spoke2-net')]"
            ],
            "name": "[concat(parameters('namePrefix'), '-spoke1-net', '/spoke1-to-hub')]",
            "apiVersion": "2018-08-01",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('namePrefix'), '-hub-net'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "comments": "Configure peering from Spoke2 to Hub",
            "dependsOn": [
                "[concat(parameters('namePrefix'), '-hub-net')]",
                "[concat(parameters('namePrefix'), '-spoke1-net')]",
                "[concat(parameters('namePrefix'), '-spoke2-net')]",
                "[resourceId('Microsoft.Network/virtualNetworks/virtualNetworkPeerings', concat(parameters('namePrefix'), '-spoke1-net'), 'spoke1-to-hub')]"
            ],
            "name": "[concat(parameters('namePrefix'), '-spoke2-net', '/spoke2-to-hub')]",
            "apiVersion": "2018-08-01",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('namePrefix'), '-hub-net'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "comments": "Configure peering from Hub to Spoke1",
            "dependsOn": [
                "[concat(parameters('namePrefix'), '-hub-net')]",
                "[concat(parameters('namePrefix'), '-spoke1-net')]",
                "[concat(parameters('namePrefix'), '-spoke2-net')]",
                "[resourceId('Microsoft.Network/virtualNetworks/virtualNetworkPeerings', concat(parameters('namePrefix'), '-spoke1-net'), 'spoke1-to-hub')]",
                "[resourceId('Microsoft.Network/virtualNetworks/virtualNetworkPeerings', concat(parameters('namePrefix'), '-spoke2-net'), 'spoke2-to-hub')]"
            ],
            "name": "[concat(parameters('namePrefix'), '-hub-net', '/hub-to-spoke1')]",
            "apiVersion": "2018-08-01",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('namePrefix'), '-spoke1-net'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "comments": "Configure peering from Hub to Spoke2",
            "dependsOn": [
                "[concat(parameters('namePrefix'), '-hub-net')]",
                "[concat(parameters('namePrefix'), '-spoke1-net')]",
                "[concat(parameters('namePrefix'), '-spoke2-net')]",
                "[resourceId('Microsoft.Network/virtualNetworks/virtualNetworkPeerings', concat(parameters('namePrefix'), '-spoke1-net'), 'spoke1-to-hub')]",
                "[resourceId('Microsoft.Network/virtualNetworks/virtualNetworkPeerings', concat(parameters('namePrefix'), '-spoke2-net'), 'spoke2-to-hub')]",
                "[resourceId('Microsoft.Network/virtualNetworks/virtualNetworkPeerings', concat(parameters('namePrefix'), '-hub-net'), 'hub-to-spoke1')]"
            ],
            "name": "[concat(parameters('namePrefix'), '-hub-net', '/hub-to-spoke2')]",
            "apiVersion": "2018-08-01",
            "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks', concat(parameters('namePrefix'), '-spoke2-net'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[concat(parameters('namePrefix'), '-spoke2-sub1-fw')]",
            "apiVersion": "2017-06-01",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "allowSSHFromJump",
                        "properties": {
                            "description": "Allow SSH traffic from jump server",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "10.0.0.4/32",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "denySSH",
                        "properties": {
                            "description": "Deny SSH traffic",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 105,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allowWeb",
                        "properties": {
                            "description": "Allow web traffic",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRanges": [
                                "80",
                                "443"
                            ],
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[concat(parameters('namePrefix'), '-spoke1-sub1-fw')]",
            "apiVersion": "2017-06-01",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "allowSSHFromJump",
                        "properties": {
                            "description": "Allow SSH traffic from jump server",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "10.0.0.4/32",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "denySSH",
                        "properties": {
                            "description": "Deny SSH traffic",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 105,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allowWeb",
                        "properties": {
                            "description": "Allow web traffic",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRanges": [
                                "80",
                                "443"
                            ],
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allowPaasSql",
                        "properties": {
                            "description": "Allow PaaS SQL traffic",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "1433",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "Sql.WestEurope",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[concat(parameters('namePrefix'), '-hub-rp-fw')]",
            "apiVersion": "2017-06-01",
            "location": "[variables('location')]",
            "properties": {
                "securityRules": [
                    {
                        "name": "allowSSHFromJump",
                        "properties": {
                            "description": "Allow SSH traffic from jump server",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "10.0.0.4/32",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "denySSH",
                        "properties": {
                            "description": "Deny SSH traffic",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 105,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allowWeb",
                        "properties": {
                            "description": "Allow web ports on reverse proxy",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRanges": [
                                "8080-8090"
                            ],
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allowAppGwManagement",
                        "properties": {
                            "description": "Allow web ports on reverse proxy",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRanges": [
                                "65200-65535"
                            ],
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 120,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/routeTables",
            "name": "[concat(parameters('namePrefix'), '-defaultRoutes')]",
            "apiVersion": "2018-07-01",
            "location": "[variables('location')]",
            "properties": {
                "routes": [
                    {
                        "name": "defaultToNva",
                        "properties": {
                            "addressPrefix": "0.0.0.0/0",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('fwIp')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/routeTables",
            "name": "[concat(parameters('namePrefix'), '-routesFromRp')]",
            "apiVersion": "2018-07-01",
            "location": "[variables('location')]",
            "properties": {
                "routes": [
                    {
                        "name": "defaultToNva",
                        "properties": {
                            "addressPrefix": "10.0.0.0/8",
                            "nextHopType": "VirtualAppliance",
                            "nextHopIpAddress": "[parameters('fwIp')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}