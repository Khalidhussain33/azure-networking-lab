{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "azureFirewallSubnetId": {
            "type": "string"
        },
        "privateIp": {
            "type": "string"
        }
    },
    "variables": {
        "ipName": "firewallPublicIp",
        "location": "[resourceGroup().location]",
        "firewallName": "firewall"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('ipName')]",
            "apiVersion": "2018-10-01",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAllocationMethod": "Static"
            },
            "sku": {
                "name": "Standard"
            }
        },
        {
            "apiVersion": "2018-06-01",
            "type": "Microsoft.Network/azureFirewalls",
            "name": "[variables('firewallName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('ipName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "subnet": {
                                "id": "[parameters('azureFirewallSubnetId')]"
                            },
                            "privateIPAddress": "10.0.3.196",
                            "privateIPAllocationMethod": "Static",
                            "InternalPublicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses/', variables('ipName'))]"
                            }
                        }
                    }
                ],
                "applicationRuleCollections": [
                    {
                        "name": "appRc1",
                        "properties": {
                            "priority": 101,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "appRule1",
                                    "protocols": [
                                        {
                                            "port": "80",
                                            "protocolType": "http"
                                        },
                                        {
                                            "port": "443",
                                            "protocolType": "https"
                                        }
                                    ],
                                    "targetUrls": [
                                        "*microsoft.com"
                                    ]
                                }
                            ]
                        }
                    }
                ],
                "networkRuleCollections": [
                    {
                        "name": "netRc1",
                        "properties": {
                            "priority": 200,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "netRule1",
                                    "protocols": [
                                        "TCP"
                                    ],
                                    "sourceAddresses": [
                                        "192.168.2.0/24"
                                    ],
                                    "destinationAddresses": [
                                        "*"
                                    ],
                                    "destinationPorts": [
                                        "8000-8999"
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}