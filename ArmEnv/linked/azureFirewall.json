{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "azureFirewallSubnetId": {
            "type": "string"
        },
        "privateIp": {
            "type": "string"
        }
    },
    "variables": {
        "ipName": "firewallPublicIp",
        "location": "[resourceGroup().location]",
        "firewallName": "firewall"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('ipName')]",
            "apiVersion": "2019-12-01",
            "location": "[variables('location')]",
            "properties": {
                "publicIPAllocationMethod": "Static"
            },
            "sku": {
                "name": "Standard"
            }
        },
        {
            "apiVersion": "2020-04-01",
            "type": "Microsoft.Network/azureFirewalls",
            "name": "[variables('firewallName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[concat('Microsoft.Network/publicIPAddresses/', variables('ipName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "IpConf",
                        "properties": {
                            "subnet": {
                                "id": "[parameters('azureFirewallSubnetId')]"
                            },
                            "privateIPAddress": "10.0.3.196",
                            "privateIPAllocationMethod": "Static",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses/', variables('ipName'))]"
                            }
                        }
                    }
                ],
                "applicationRuleCollections": [
                    {
                        "name": "allowMicrosoft",
                        "properties": {
                            "priority": 100,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "microsoft",
                                    "protocols": [
                                        {
                                            "port": "80",
                                            "protocolType": "http"
                                        },
                                        {
                                            "port": "443",
                                            "protocolType": "https"
                                        }
                                    ],
                                    "targetUrls": [
                                        "*microsoft.com"
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "name": "allowUbuntu",
                        "properties": {
                            "priority": 110,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "ubuntu",
                                    "protocols": [
                                        {
                                            "port": "80",
                                            "protocolType": "http"
                                        },
                                        {
                                            "port": "443",
                                            "protocolType": "https"
                                        }
                                    ],
                                    "targetUrls": [
                                        "*ubuntu.com"
                                    ]
                                }
                            ]
                        }
                    },
                    {
                        "name": "allowGithub",
                        "properties": {
                            "priority": 120,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "ubuntu",
                                    "protocols": [
                                        {
                                            "port": "80",
                                            "protocolType": "http"
                                        },
                                        {
                                            "port": "443",
                                            "protocolType": "https"
                                        }
                                    ],
                                    "targetUrls": [
                                        "*github.com"
                                    ]
                                }
                            ]
                        }
                    }
                ],
                "networkRuleCollections": [
                    {
                        "name": "allowInternalCommunication",
                        "properties": {
                            "priority": 200,
                            "action": {
                                "type": "Allow"
                            },
                            "rules": [
                                {
                                    "name": "allowWeb",
                                    "protocols": [
                                        "TCP"
                                    ],
                                    "sourceAddresses": [
                                        "10.0.0.0/8"
                                    ],
                                    "destinationAddresses": [
                                        "10.0.0.0/8"
                                    ],
                                    "destinationPorts": [
                                        "80"
                                    ]
                                },
                                {
                                    "name": "allowSsh",
                                    "protocols": [
                                        "TCP"
                                    ],
                                    "sourceAddresses": [
                                        "10.0.0.0/8"
                                    ],
                                    "destinationAddresses": [
                                        "10.0.0.0/8"
                                    ],
                                    "destinationPorts": [
                                        "22"
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}